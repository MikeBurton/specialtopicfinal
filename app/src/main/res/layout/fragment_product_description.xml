<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="205dp"
                android:layout_height="150dp"
                android:id="@+id/proDes_ivIcon"
                android:maxHeight="150dp"
                android:maxWidth="150dp"

                android:src="@drawable/ic_launcher"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.24"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Name:"
                android:id="@+id/proDes_txtProductName"
                android:layout_below="@+id/proDes_ivIcon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Price"
                android:id="@+id/proDes_txtProductPrice"
                android:layout_below="@+id/proDes_txtProductName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Stock"
                android:id="@+id/proDes_txtProductStock"
                android:layout_below="@+id/proDes_txtProductPrice"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Des"
                android:id="@+id/proDes_txtProductDescription"
                android:layout_below="@+id/proDes_txtProductStock"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Add to cart"
                android:id="@+id/proDes_btnAddToCart"
                android:layout_below="@+id/proDes_txtProductDescription"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_layout"
                android:textColor="@color/button_text_layout"/>
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>